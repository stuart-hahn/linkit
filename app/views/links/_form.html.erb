<%= form_with(model: @link, url: [@category, @link], local: true) do |f| %>
<%= render '/shared/errors', object: @link %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :url %>
    <%= f.url_field :url %>

    <% if !@category %>
        <%= f.collection_select :category_id, Category.all, :id, :title %>
    <% else %>
        <%= f.hidden_field :category_id %>
    <% end %>

    <%= f.submit %>
<% end %>